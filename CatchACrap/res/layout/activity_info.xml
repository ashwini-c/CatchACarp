<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/myBackground"
    android:baselineAligned="false"
    android:selectAllOnFocus="true" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/header" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:layout_marginTop="15dp"
        android:background="@color/myButton"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="Add Carp Information"
        android:textColor="@color/myText"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsmall"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedPopulation" />

        <RadioButton
            android:id="@+id/radio_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnmedium"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedPopulation" />

        <RadioButton
            android:id="@+id/radio_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnlarge"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedPopulation" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radio2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_spawn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnspawn"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedActivity" />

        <RadioButton
            android:id="@+id/radio_swim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnswim"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedActivity" />

        <RadioButton
            android:id="@+id/radio_unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnunknown"
            android:button="@android:color/transparent"
            android:onClick="onRadioButtonClickedActivity" />
    </RadioGroup>

    <Button
        android:id="@+id/btnNext"
        style="@style/ButtonText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/myButton"
        android:paddingLeft="10dp"
        android:text="@string/uow"
        android:textColor="@color/myText"
        android:textStyle="bold" />

</RelativeLayout>